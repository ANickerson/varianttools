[format description]
description=Input format for variants with multiple sample genotypes. The input file genotypes.txt is prepared by transposing and combining fields from some Hapmap data file in PED/MAP format. 
variant_fields=chr, pos, ref, alt
variant_info=snp_id, genet_dist
genotype_fields=geno

[chr]
index=1
type=VARCHAR(20)
adj=RemoveLeading('chr')
comment=Chromosome

[snp_id]
index=2
type=VARCHAR(255)
comment=rs number or snp identifier

[genet_dist]
index=3
type=INTEGER
comments=Genetic distance (morgans)

[pos]
index=4
type=INTEGER NOT NULL
comment=1-based Position of the snp 

[ref]
index=5
type=VARCHAR(255)
comment=Reference allele

[alt]
index=6
type=VARCHAR(255)
comment=Alternative allele

[geno]
index=7:
type=INTEGER 
#adj=lambda x: None if x == '.' else x
comment=Gentoype coded as 0 (ref ref) 1 (ref alt) and 2 (alt alt)
